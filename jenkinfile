pipeline {
    agent any
    stages {
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    dir('deployment') {
                        sh 'microk8s kubectl apply -f snipeit-service.yaml -n snipeit'
                        sh 'microk8s kubectl apply -f snipeit-deployment.yaml -n snipeit'    
                    }
                }
            }
        }
        stage('GET service') {
            steps {
                script {
                    sh 'microk8s kubectl get service -n snipeit'
                }
            }
        }
    }
}
